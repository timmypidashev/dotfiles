# desktop workspaces
exec /usr/bin/rpws init 3 -k
bind 1 exec rpws 1
bind 2 exec rpws 2
bind 3 exec rpws 3

# escape key
escape Alt_L

# turn off startup msg
startup_message off

# font and colors
set font "SourceCodePro:size=16"
set fgcolor #f8f8f2
set bgcolor #000000

# borders and padding
set border 5
set barborder 5
set fwcolor #ebdbb2
set bwcolor #282828

# make sure cursor doesnt become a x
exec xsetroot -cursor_name left_ptr

# java fix
exec wmname LG3D

# terminal keybind(also unbind the original c binding)
unbind c
bind t exec urxvt 

# dmenu bind
bind d exec dmenu_run

# firefox bind
bind f exec firefox
